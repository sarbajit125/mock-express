generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CustomHeaders {
  id     String @id
  key    String
  value  String
  mockId String
  Post   Post   @relation(fields: [mockId], references: [id])
}

model Post {
  id            String          @id
  title         String
  endpoint      String
  response      String
  type          HttpType
  statusCode    Int
  domainName    String
  CustomHeaders CustomHeaders[]
  domains       domains         @relation(fields: [domainName], references: [name])
}

model domains {
  id         String   @id
  name       String   @unique
  desc       String?
  created_at DateTime @default(now())
  Post       Post[]
}

enum HttpType {
  POST
  GET
  PUT
  PATCH
  DELETE
}
